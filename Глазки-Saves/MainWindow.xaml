<Window x:Class="Глазки_Saves.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Глазки_Saves"
        mc:Ignorable="d"
        Title="Ямалетдинов Глазки" Height="450" Width="800" MinHeight="20" MinWidth="20" FontFamily="Tw Cen MT" Icon="Res/Глазки-save.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Source="Res/Глазки-save.png" HorizontalAlignment="Left" Width="100" Height="100" VerticalAlignment="Center"/>
        <TextBlock Text="Eyes-Saves" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"/>
        <Frame Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"/>
        <Button Content="Назад" Height="30" Width="140" VerticalAlignment="Center" Name="Btn_Back" HorizontalAlignment="Right" Click="Btn_Back_Click"  Style="{StaticResource MaterialDesignFlatButton}" Foreground="#AA6EF1"/>
    </Grid>
</Window>
