<Window x:Class="Глазки_Saves.PriorityEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Глазки_Saves"
        mc:Ignorable="d"
        Title="PriorityEdit" Height="300" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Приоритет" FontSize="30" FontFamily="Century Gothic" VerticalAlignment="Center"/>
            <TextBox Text="{Binding MaxPriority}" Name="Prior" Width="100" PreviewTextInput="Prior_PreviewTextInput" Margin="10 0 0 0" FontSize="30" VerticalAlignment="Bottom"/>
        </StackPanel>
        <Button Name="Save" Click="Save_Click" Grid.Row="1" FontSize="20" FontFamily="Century Gothic" Content="Сохранить" Width="300" Height="35" Background="#AA6EF1" Foreground="White" BorderBrush="#AA6EF1" Style="{StaticResource MaterialDesignRaisedButton}"/>
    </Grid>
</Window>
